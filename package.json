{
  "name": "monorepo-template",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "run-p build:*",
    "build:client": "pnpm run --filter @template/client build",
    "commit": "cz",
    "dev": "run-p dev:* --print-label",
    "dev:client": "pnpm run --filter @template/client dev",
    "lint": "run-p lint:*",
    "lint:cspell": "cspell --no-summary --no-progress",
    "lint:es": "eslint . --fix --report-unused-disable-directives --max-warnings 0",
    "lint:prettier": "prettier --ignore-unknown --ignore-path .prettierignore --write .",
    "lint:style": "stylelint '**/*.{css}' --fix -i .stylelintignore",
    "prepare": "husky",
    "sort": "run-p sort:*",
    "sort:json": "sort-json -i '**/*.json'",
    "sort:package": "sort-package-json -i '**/package.json'",
    "start": "pnpm run --filter @template/client start"
  },
  "dependencies": {
    "@template/client": "workspace:*",
    "@template/eslint": "workspace:*",
    "@template/libs": "workspace:*",
    "@template/tsconfig": "workspace:*",
    "npm-run-all": "^4.1.5",
    "ts-toolbelt": "^9.6.0",
    "tsafe": "^1.7.5",
    "type-fest": "^4.26.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.5.0",
    "@commitlint/types": "^19.0.3",
    "@total-typescript/ts-reset": "^0.5.1",
    "@tsconfig/next": "^2.0.3",
    "@tsconfig/node22": "^22.0.0",
    "@tsconfig/strictest": "^2.0.2",
    "@types/lint-staged": "^13.3.0",
    "@types/node": "^22.5.4",
    "commitizen": "^4.3.0",
    "commitlint": "^18.6.1",
    "cspell": "^8.17.5",
    "eslint": "8.57.0",
    "fast-glob": "^3.3.3",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "sort-json": "^2.0.1",
    "sort-package-json": "^2.8.0",
    "stylelint": "^16.14.0",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-prettier": "^5.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.6.2"
  },
  "packageManager": "pnpm@9.11.0+sha512.0a203ffaed5a3f63242cd064c8fb5892366c103e328079318f78062f24ea8c9d50bc6a47aa3567cabefd824d170e78fa2745ed1f16b132e16436146b7688f19b",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  }
}
